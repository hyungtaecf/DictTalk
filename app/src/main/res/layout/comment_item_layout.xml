<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTranslationBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:singleLine="false"
        android:text="@string/sample_sentence"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewTranslationLike"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageProfile"
        app:layout_constraintTop_toBottomOf="@+id/textViewBy" />


    <ImageButton
        android:id="@+id/buttonComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_comment"
        app:layout_constraintEnd_toStartOf="@+id/textViewNumberOfComments"
        app:layout_constraintTop_toBottomOf="@+id/textViewTranslationBody" />

    <TextView
        android:id="@+id/textViewNumberOfComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="26"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewTranslationFlag"
        app:layout_constraintTop_toBottomOf="@+id/textViewTranslationBody" />

    <ImageButton
        android:id="@+id/textViewTranslationFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_flag"
        app:layout_constraintEnd_toEndOf="@+id/textViewTranslationBody"
        app:layout_constraintTop_toBottomOf="@+id/textViewTranslationBody" />

    <ImageButton
        android:id="@+id/textViewTranslationLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_arrow_drop_up"
        app:layout_constraintBottom_toTopOf="@+id/textViewTranslationDislike"
        app:layout_constraintEnd_toStartOf="@+id/textViewTranslationNumberOfLikes"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTranslationNumberOfLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textSize="18dp"
        android:text="34"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewTranslationLike" />

    <ImageView
        android:id="@+id/textViewTranslationDislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="0dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_arrow_drop_down"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTranslationBody"
        app:layout_constraintEnd_toEndOf="@+id/textViewTranslationLike"
        app:layout_constraintTop_toBottomOf="@+id/textViewTranslationLike" />

    <TextView
        android:id="@+id/textViewTranslationNumberOfDislikes"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:textSize="18dp"
        android:text="2"
        app:layout_constraintEnd_toEndOf="@+id/textViewTranslationNumberOfLikes"
        app:layout_constraintTop_toTopOf="@+id/textViewTranslationDislike" />

    <TextView
        android:id="@+id/textViewBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="by username23423"
        app:layout_constraintStart_toStartOf="@+id/textViewTranslationBody"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProfile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/default_profile"
        android:text="Button"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="32"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewTranslationBody"
        app:layout_constraintTop_toBottomOf="@+id/textViewTranslationDislike" />

</android.support.constraint.ConstraintLayout>